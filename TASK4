<body>
    <div class="app-container">
        <div class="header">
            <h1>ðŸŽ® Tic Tac Toe</h1>
            <button class="theme-toggle" onclick="toggleTheme()" title="Toggle Theme">
                <i class="uil uil-moon"></i>
            </button>
        </div>
        
        <div class="game-info">
            <div class="player-turn" id="playerTurn">
                <i class="uil uil-user"></i> Player X's turn
            </div>
            <div class="scores">
                <span class="score score-x">X: <span id="scoreX">0</span></span>
                <span class="score score-o">O: <span id="scoreO">0</span></span>
            </div>
        </div>

        <div class="card">
            <div class="status" id="gameStatus">Player X to play</div>
            
            <div class="board" id="gameBoard">
                <div class="cell" data-index="0"></div>
                <div class="cell" data-index="1"></div>
                <div class="cell" data-index="2"></div>
                <div class="cell" data-index="3"></div>
                <div class="cell" data-index="4"></div>
                <div class="cell" data-index="5"></div>
                <div class="cell" data-index="6"></div>
                <div class="cell" data-index="7"></div>
                <div class="cell" data-index="8"></div>
            </div>
            
            <div class="controls">
                <button class="btn reset-btn" onclick="resetGame()">
                    <i class="uil uil-refresh"></i> New Game
                </button>
            </div>
        </div>
    </div>

    <script>
        class TicTacToe {
            constructor() {
                this.board = ['', '', '', '', '', '', '', '', ''];
                this.currentPlayer = 'X';
                this.gameActive = true;
                this.scores = { X: 0, O: 0 };
                this.init();
            }

            init() {
                this.cells = document.querySelectorAll('.cell');
                this.statusDisplay = document.getElementById('gameStatus');
                this.scoreX = document.getElementById('scoreX');
                this.scoreO = document.getElementById('scoreO');
                this.playerTurn = document.getElementById('playerTurn');
                
                this.cells.forEach(cell => cell.addEventListener('click', (e) => this.handleCellClick(e)));
                this.updateDisplay();
            }

            handleCellClick(e) {
                const cell = e.target;
                const index = parseInt(cell.dataset.index);

                if (this.board[index] !== '' || !this.gameActive) return;

                this.board[index] = this.currentPlayer;
                cell.textContent = this.currentPlayer;
                cell.classList.add(this.currentPlayer.toLowerCase());

                if (this.checkWinner()) {
                    this.statusDisplay.textContent = `Player ${this.currentPlayer} Wins! ðŸŽ‰`;
                    this.statusDisplay.classList.add('winner');
                    this.scores[this.currentPlayer]++;
                    this.gameActive = false;
                } else if (this.board.every(cell => cell !== '')) {
                    this.statusDisplay.textContent = "It's a Draw! ðŸ¤";
                    this.gameActive = false;
                } else {
                    this.currentPlayer = this.currentPlayer === 'X' ? 'O' : 'X';
                    this.statusDisplay.textContent = `Player ${this.currentPlayer} to play`;
                }

                this.updateDisplay();
            }

            checkWinner() {
                const winPatterns = [
                    [0, 1, 2], [3, 4, 5], [6, 7, 8], // rows
                    [0, 3, 6], [1, 4, 7], [2, 5, 8], // columns
                    [0, 4, 8], [2, 4, 6]             // diagonals
                ];

                return winPatterns.some(pattern => {
                    const [a, b, c] = pattern;
                    if (this.board[a] && this.board[a] === this.board[b] && this.board[a] === this.board[c]) {
                        this.highlightWin(pattern);
                        return true;
                    }
                    return false;
                });
            }

            highlightWin(pattern) {
                pattern.forEach(index => {
                    this.cells[index].classList.add('won');
                });
            }

            updateDisplay() {
                this.scoreX.textContent = this.scores.X;
                this.scoreO.textContent = this.scores.O;
                this.playerTurn.innerHTML = `<i class="uil uil-user"></i> Player ${this.currentPlayer}'s turn`;
                this.playerTurn.className = `player-turn player-${this.currentPlayer.toLowerCase()}`;
            }

            resetGame() {
                this.board = ['', '', '', '', '', '', '', '', ''];
                this.currentPlayer = 'X';
                this.gameActive = true;
                this.statusDisplay.textContent = 'Player X to play';
                this.statusDisplay.classList.remove('winner');
                
                this.cells.forEach(cell => {
                    cell.textContent = '';
                    cell.className = 'cell';
                    cell.disabled = false;
                });
                
                this.updateDisplay();
            }

            resetScores() {
                this.scores = { X: 0, O: 0 };
                this.updateDisplay();
            }
        }

        // Global functions
        function toggleTheme() {
            document.body.dataset.theme = document.body.dataset.theme === 'dark' ? '' : 'dark';
            localStorage.setItem('tictactoe-theme', document.body.dataset.theme);
        }

        function resetGame() {
            game.resetGame();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.code === 'KeyR') resetGame();
        });

        // Load theme
        if (localStorage.getItem('tictactoe-theme') === 'dark') {
            document.body.dataset.theme = 'dark';
            document.querySelector('.theme-toggle i').className = 'uil uil-sun';
        }

        // Initialize game
        const game = new TicTacToe();
    </script>
</body>
</html>
